{
	"name": "obsidian-mcp-plugin",
	"version": "1.0.0",
	"description": "Provides a Model Context Protocol (MCP) endpoint via Obsidian Local REST API",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"check-types": "tsc -noEmit -skipLibCheck",
		"check-test-types": "tsc -noEmit -p test/tsconfig.json",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint 'main.ts' 'mcp_server.ts' 'tools/**/*.ts' 'test/**/*.ts'",
		"lint:fix": "eslint 'main.ts' 'mcp_server.ts' 'tools/**/*.ts' 'test/**/*.ts' --fix",
		"format": "prettier --write \"**/*.{ts,js,css,json}\"",
		"format:check": "prettier --check \"**/*.{ts,js,css,json}\"",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "npm run check-types && npm run check-test-types",
		"fix": "npm run lint:fix ; npm run format",
		"check": "npm-run-all -p lint format:check check-types check-test-types -s test",
		"mcp:inspect": "npx @modelcontextprotocol/inspector"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@types/commander": "^2.12.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.1",
		"@types/glob-to-regexp": "^0.4.4",
		"@types/json-logic-js": "^2.0.8",
		"@types/mime-types": "^2.1.4",
		"@types/node": "^22.15.15",
		"@types/node-forge": "^1.3.11",
		"@typescript-eslint/eslint-plugin": "^8.32.0",
		"@typescript-eslint/parser": "^8.32.0",
		"@vitest/coverage-v8": "^3.1.3",
		"builtin-modules": "^5.0.0",
		"c8": "^10.1.3",
		"commander": "^13.1.0",
		"esbuild": "^0.25.4",
		"eslint-config-prettier": "^10.1.3",
		"eslint-plugin-prettier": "^5.4.0",
		"npm-run-all": "^4.1.5",
		"obsidian": "latest",
		"obsidian-dataview": "^0.5.68",
		"obsidian-local-rest-api": "latest",
		"prettier": "^3.5.3",
		"tslib": "^2.8.1",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.0",
		"vitest": "^3.1.3",
		"yaml": "^2.7.1"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.11.0",
		"zod": "^3.24.4"
	}
}
