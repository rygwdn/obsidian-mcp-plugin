{
	"name": "obsidian-mcp-plugin",
	"version": "0.5.2",
	"description": "Provides a Model Context Protocol (MCP) endpoint via Obsidian Local REST API",
	"type": "module",
	"main": "main.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rygwdn/obsidian-mcp-plugin.git"
	},
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"check-types": "tsc -noEmit -skipLibCheck",
		"check-test-types": "tsc -noEmit -p test/tsconfig.json",
		"version": "node version-bump.mjs && npm run format && git add manifest.json versions.json",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"format": "prettier --write \"**/*.{ts,js,css,json}\"",
		"format:check": "prettier --check \"**/*.{ts,js,css,json}\"",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "npm run check-types && npm run check-test-types",
		"fix": "npm run lint:fix; npm run markdownlint:fix; npm run format",
		"markdownlint": "markdownlint-cli2 --config .markdownlint.json \"**/*.md\" \"!node_modules/**/*.md\"",
		"markdownlint:fix": "markdownlint-cli2 --config .markdownlint.json --fix \"**/*.md\" \"!node_modules/**/*.md\"",
		"check": "npm-run-all -p lint format:check check-types check-test-types markdownlint -s test",
		"inspect": "npx @modelcontextprotocol/inspector",
		"install-plugin": "npm run build && node scripts/install.js"
	},
	"keywords": [
		"obsidian",
		"mcp",
		"model-context-protocol",
		"ai",
		"plugin",
		"local-rest-api"
	],
	"author": "Ryan Wooden <rygwdn@gmail.com>",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/commander": "^2.12.5",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/glob-to-regexp": "^0.4.4",
		"@types/json-logic-js": "^2.0.8",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^24.0.1",
		"@types/node-forge": "^1.3.11",
		"@typescript-eslint/eslint-plugin": "^8.34.0",
		"@typescript-eslint/parser": "^8.34.0",
		"@vitest/coverage-v8": "^3.2.3",
		"builtin-modules": "^5.0.0",
		"c8": "^10.1.3",
		"commander": "^14.0.0",
		"esbuild": "^0.25.5",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.1",
		"globals": "^16.2.0",
		"markdownlint-cli2": "^0.18.1",
		"npm-run-all": "^4.1.5",
		"obsidian": "latest",
		"obsidian-dataview": "^0.5.68",
		"obsidian-local-rest-api": "latest",
		"prettier": "^3.5.3",
		"tslib": "^2.8.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.0",
		"vitest": "^3.2.3",
		"yaml": "^2.8.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.3",
		"zod": "^3.25.64"
	}
}
