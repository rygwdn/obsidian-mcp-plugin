{
	"name": "obsidian-mcp-plugin",
	"version": "0.7.0",
	"description": "Provides a Model Context Protocol (MCP) server for Obsidian",
	"type": "module",
	"main": "main.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rygwdn/obsidian-mcp-plugin.git"
	},
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"check-types": "tsc -noEmit -skipLibCheck",
		"check-test-types": "tsc -noEmit -p test/tsconfig.json",
		"version": "node version-bump.mjs && npm run format && git add manifest.json versions.json",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"format": "prettier --write \"**/*.{ts,js,css,json}\"",
		"format:check": "prettier --check \"**/*.{ts,js,css,json}\"",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "npm run check-types && npm run check-test-types",
		"fix": "npm run lint:fix; npm run markdownlint:fix; npm run format",
		"markdownlint": "markdownlint-cli2 --config .markdownlint.json \"**/*.md\" \"!node_modules/**/*.md\"",
		"markdownlint:fix": "markdownlint-cli2 --config .markdownlint.json --fix \"**/*.md\" \"!node_modules/**/*.md\"",
		"check": "npm-run-all -p lint format:check check-types check-test-types markdownlint -s test",
		"inspect": "npx @modelcontextprotocol/inspector",
		"install-plugin": "npm run build && node scripts/install.js"
	},
	"keywords": [
		"obsidian",
		"mcp",
		"model-context-protocol",
		"ai",
		"plugin"
	],
	"author": "Ryan Wooden <rygwdn@gmail.com>",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/glob-to-regexp": "^0.4.4",
		"@types/json-logic-js": "^2.0.8",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^24.10.0",
		"@types/node-forge": "^1.3.14",
		"@vitest/coverage-v8": "^4.0.8",
		"builtin-modules": "^5.0.0",
		"c8": "^10.1.3",
		"commander": "^14.0.2",
		"esbuild": "^0.27.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"markdownlint-cli2": "^0.18.1",
		"npm-run-all": "^4.1.5",
		"obsidian": "latest",
		"obsidian-dataview": "^0.5.68",
		"obsidian-local-rest-api": "latest",
		"prettier": "^3.6.2",
		"tslib": "^2.8.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vitest": "^4.0.8",
		"yaml": "^2.8.1"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.21.1",
		"body-parser": "^2.2.0",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"fastmcp": "^3.22.0",
		"node-forge": "^1.3.1",
		"zod": "^4.1.12"
	}
}
